
@{
                /**/

                ViewBag.Title = "Inscription";
}

<h2>Inscription</h2>
@ViewBag.Message
@model Condorcar.Models.POCO.CPassenger
@using (Html.BeginForm("Register", "Passenger", FormMethod.Post))
{
<fieldset>
    <legend>Enregistrement d'un passager sur le site Condorcar.</legend>

    <div>
        @Html.LabelFor(model => model.Pseudo)
        @Html.TextBoxFor(model => model.Pseudo)
        @Html.ValidationMessageFor(model => model.Pseudo)
    </div>
    <div>
        @Html.LabelFor(model => model.Password)
        @Html.PasswordFor(model => model.Password)
        @Html.ValidationMessageFor(model => model.Password)
    </div>
    <div>
        @Html.LabelFor(model => model.ConfirmPassword)
        @Html.PasswordFor(model => model.ConfirmPassword)
        @Html.ValidationMessageFor(model => model.ConfirmPassword)
    </div>
    <div>
        @Html.LabelFor(model => model.Address)
        @Html.TextBoxFor(model => model.Address)
    </div>
    <div>
        @Html.LabelFor(model => model.Email)
        @Html.TextBoxFor(model => model.Email)
        @Html.ValidationMessageFor(model => model.Email)
    </div>
    <div>
        @Html.LabelFor(model => model.Smoker)
        @Html.CheckBoxFor(model => model.Smoker)
        @Html.ValidationMessageFor(model => model.Smoker)
    </div>
    
    <br />
    <input type="submit" value="S'enregistrer" />
</fieldset>
}


<input type="button" value="Se connecter" onclick="location.href='@Url.Action("Index", "Home")'" />