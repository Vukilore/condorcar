@model Condorcar.Models.POCO.CPassenger

@{
    ViewBag.Title = "Modification du profil";
}

<h2>Enregistrement</h2>

@using (Html.BeginForm("Edit", "Passenger", FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Enregistrement d'un passager</h4>
    <h2>@ViewBag.Message</h2>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id) 

    <div class="form-group">
        @Html.LabelFor(model => model.Smoker, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.Smoker)
                @Html.ValidationMessageFor(model => model.Smoker, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Modifier profil" class="btn btn-default" />
        </div>
    </div>
</div>
}
